<rxui:ReactiveUserControl x:Class="InputValidator.UI.WarningView"
                          x:TypeArguments="inputvalidator:Warning"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:local="clr-namespace:InputValidator.UI"
                          xmlns:inputvalidator="clr-namespace:InputValidator;assembly=InputValidator"
                          mc:Ignorable="d"
                          d:DesignHeight="450"
                          d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock>
            Scope:
            <Run x:Name="RunScope" />
        </TextBlock>
    </Grid>
</rxui:ReactiveUserControl>